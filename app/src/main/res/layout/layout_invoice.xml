<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawable_chef_orders_background"
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_regular"
            android:text="@string/invoice_string"
            android:layout_gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:textColor="@android:color/primary_text_dark" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/ubuntu_regular"
            android:text="@string/invoice_date_string"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:textColor="@android:color/tertiary_text_dark" />

        <TextView
            android:id="@+id/invoiceDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/ubuntu_regular"
            android:text="@string/invoice_date_string"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:textColor="@android:color/primary_text_dark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/ubuntu_regular"
            android:text="@string/items_string"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:textColor="@android:color/tertiary_text_dark" />

        <TextView
            android:id="@+id/items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/items_string"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:textColor="@android:color/primary_text_dark"
            android:textStyle="bold"
            android:fontFamily="@font/ubuntu_regular" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_regular"
                android:text="@string/sub_total_string"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                android:textColor="@android:color/primary_text_dark" />

            <TextView
                android:id="@+id/subTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/ubuntu_regular"
                android:text="@string/default_price_string"
                android:layout_below="@+id/textView16"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                android:textColor="@android:color/primary_text_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/ubuntu_regular"
                android:text="@string/taxes_string"
                android:layout_below="@+id/subTotal"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                android:textColor="@android:color/primary_text_dark" />

            <TextView
                android:id="@+id/taxes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/ubuntu_regular"
                android:text="@string/default_price_string"
                android:layout_below="@+id/textView17"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                android:textColor="@android:color/primary_text_dark"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_regular"
                    android:text="@string/total_string"
                    android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                    android:textColor="@android:color/primary_text_dark" />

                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/ubuntu_regular"
                    android:text="@string/default_price_string"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@android:color/primary_text_dark"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView18"
            tools:layout_editor_absoluteX="16dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/receivePayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/drawable_table_booking_unselected"
                android:fontFamily="@font/ubuntu_regular"
                android:padding="16dp"
                android:text="@string/receive_payment_string"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>